#!/usr/bin/make -f

%:
	dh $@ --buildsystem=cmake --parallel

override_dh_auto_configure:
	dh_auto_configure -- \
		-DCMAKE_BUILD_TYPE=Release \
		-DUSE_OCC=ON \
		-DUSE_PYTHON=OFF \
		-DUSE_GUI=ON \
		-DUSE_SUPERBUILD=OFF \
		-DNG_INSTALL_DIR=/usr/lib/netgen6/ \
		-DNG_INSTALL_DIR_INCLUDE=/usr/include/netgen6/ \


